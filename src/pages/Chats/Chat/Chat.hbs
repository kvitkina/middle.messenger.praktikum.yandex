<img src='{{selectedChat.avatar}}' class='chat__avatar' />

<div class='chat__info'>
    <h3 class='chat__name'>{{selectedChat.title}}</h3>
    <p class='chat__text'>{{selectedChat.last_message.content}}</p>
</div>

<div class='chat__details'>
    <time class='chat__time'>{{selectedChat.last_message.time}}</time>
    <div class='chat__counter'>
        <p class='chat__counter-text'>{{selectedChat.unread_count}}</p>
    </div>
</div>
