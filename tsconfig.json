{
    "compilerOptions": {
        "outDir": "dist",
        "target": "ESNext",
        "declaration": false,
        "module": "commonjs",
        "strictNullChecks": true,
        "sourceMap": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "strict": true,
        "esModuleInterop": true
    },
    "exclude": ["dist", "node_modules"]
}
